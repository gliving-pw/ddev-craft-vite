<!DOCTYPE html>
<html
    lang="en-US"
    data-env="{{ craft.app.config.env }}"
    data-use-dev-server="{{ craft.vite.viteService.useDevServer }}"
>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"/>
        <meta name="referrer" content="origin-when-cross-origin"/>

        <title>CraftCMS Boilerplate</title>
        <meta name="description" content="CraftCMS Boilerplate">

        {% if not craft.vite.viteService.useDevServer %}
            {{ craft.siteModule.getCachedMainCSS()|raw }}
        {% endif %}

    </head>

    <style>
        html[data-use-dev-server="true"] {
            opacity: 0;
            transition: opacity 150ms ease;
            transition-delay: 150ms;
        }
        html[data-use-dev-server="true"].dev-css-loaded {
            opacity: 1;
        }
    </style>

    <body>

        {% block page %}{% endblock %}

        {{ craft.vite.script("src/app/app.ts") }}

    </body>

</html>
