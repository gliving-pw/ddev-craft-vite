{#
    {
        id: string;
        label: string;
        name: "text";
        type?: "text" | "email" | "tel" | "url";
        hideLabel?: boolean;
        placeholder?: string;
    }
#}

<input-component web-component>
    <label
        class="{{ hideLabel is defined and hideLabel ? "-hidden-label" : "" }}"
        for="{{ id }}"
    >
        {{ label }}
    </label>
    <input
        id="{{ id }}"
        name="{{ name }}"
        type="{{ type ?? "text" }}"
        placeholder="{{ placeholder ?? "" }}"
        autocapitalize="off"
        autocomplete="off"
    />
</input-component>